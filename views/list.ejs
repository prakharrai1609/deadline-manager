<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listType %></h1>
</div>

<div class="box">
    <% list.forEach((item) => { %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
            <p><%= item.title %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listType %>">
    </form>
    <% }) %>
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" id="" placeholder="New Item" autocomplete="off">
        <button type="submit" name="submit" value="<%= listType %>">+</button>
    </form>
</div>

<%- include("footer") -%>